{% extends 'base.html.twig' %}
{% block body %}
{% set url_not_image = 'https://thumbs.dreamstime.com/b/no-angry-person-mosaic-grunge-not-available-stamp-seal-lines-mosaic-no-angry-person-pictogram-red-not-available-seal-171894178.jpg' %}



<h1 class="title_collection_page">Все коллекции ({{ count_collections }})</h1>
    <div class="row">


        {%  for collection in collections %}

            <div class="col-sm-4 sm-item">
                <a href="{{ path('collection-page', {'slug': collection.slug}) }}" class="href_item">
                    <div class="box content col-sm-12" style="background: url('{% if collection.image is not empty %}{{  collection.image }}{% else %}{{ url_not_image }}{% endif %}')no-repeat;">
                        <div class="title_item_box col-sm-12"><span>{{ collection.title }}</span></div>
                        <div class="date_item_box col-sm-12"><span>{{ collection.dateCreated|date("d.m.Y") }}</span></div>
                    </div>
                </a>
            </div>
        {%  endfor %}
        <div class="navigation">
            {{ knp_pagination_render(collections) }}
        </div>
    </div>



{% endblock %}