{% extends 'base.html.twig' %}

{% block title %}Edit gallery{% endblock %}

{% block body %}

    <h1>Update Item</h1>
    {% form_theme editGallery 'foundation_5_layout.html.twig' %}
    {{ form_start(editGallery,{'multipart': true}) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(editGallery) }}
    </div>
<div class="form-group">
    {% for image in images %}

   <div class="col-sm-3 my_col_img">

     <div class="col-sm-12"> <img class="my_img" src="{{ image.name }}"></div>
     <div class="col-sm-12"> <a href="{{ path('remove_image', {'image_id': image.id}) }}"><i class="bi bi-trash"></i></a> </div>


   </div>

    {% endfor %}
</div>


<div>

    <div class="col-sm-4 form_left">
        <button type="submit" class="btn btn-primary">Uodate</button>
    </div>



</div>

    {{ form_end(editGallery) }}





{% endblock %}



