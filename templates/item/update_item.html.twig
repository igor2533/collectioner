{% extends 'base.html.twig' %}

{% block title %}Add Item{% endblock %}

{% block body %}
<div class="container container_edit_item">
    <h1>Update Item</h1>
    {% form_theme updateItemForm 'foundation_5_layout.html.twig' %}
    {{ form_start(updateItemForm,{'multipart': true}) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(updateItemForm) }}
    </div>
<div class="form-group">

 {{ form_row(updateItemForm.title,{
            attr: {'class': 'form-control'},
            label: 'Title',
            placeholder: 'Title'
        }) }}


</div>
    <div class="form-group">
        {{ form_row(updateItemForm.description, {
            attr: {'class': 'form-control'},
            label: false

        }) }}
    </div>

    <div class="form-group">

        {{ form_row(updateItemForm.year,{
            attr: {'class': 'form-control'},
            label: 'Year',
            placeholder: 'Year'
        }) }}


    </div>

    <div class="form-group tag_item_update">
        {{ form_row(updateItemForm.tag) }}
    </div>



<div class="form-group">
  <a class="btn btn-success" href="{{ path('edit_gallery', {'id': item.id}) }}"><i class="bi bi-pencil"></i>Edit gallery</a>
</div>

    <div class="col-sm-4 form_left">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>



</div>






    {{ form_end(updateItemForm) }}



</div>
{% endblock %}



