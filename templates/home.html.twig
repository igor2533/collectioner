{% extends 'base.html.twig' %}
{% block body %}
{% set url_not_image = 'https://thumbs.dreamstime.com/b/no-angry-person-mosaic-grunge-not-available-stamp-seal-lines-mosaic-no-angry-person-pictogram-red-not-available-seal-171894178.jpg' %}




    <h2>Последние Коллекции</h2>
    <div class="row">



        {%  for collection in collections %}

        <div class="col-sm-4 sm-item">
            <a href="{{ path('collection-page', {'slug': collection.slug}) }}" class="href_item">
                <div class="box content col-sm-12" style="background: url('{% if collection.image is not empty %}{{  collection.image }}{% else %}{{ url_not_image }}{% endif %}')no-repeat;">
                    <div class="title_item_box col-sm-12"><span>{{ collection.title }}</span></div>
                    <div class="date_item_box col-sm-12"><span>{{ collection.dateCreated|date("d.m.Y") }}</span></div>
                </div>
            </a>
        </div>
        {%  endfor %}



    </div>

    <h2>Последние items</h2>
    <div class="row">



        {%  for item in items %}

            <div class="col-sm-4 sm-item">
                <a href="{{ path('view', {'slug': item.slug}) }}" class="href_item">
                    <div class="box content col-sm-12" style="background: url('{% if item.images is not empty %}{{  item.images['0'].name }}{% else %}{{ url_not_image }}{% endif %}')no-repeat;">
                        <div class="title_item_box col-sm-12"><span>{{ item.title }}</span></div>
                        <div class="date_item_box col-sm-12"><span>{{ item.dateCreated|date("d.m.Y") }}</span></div>
                    </div>
                </a>
            </div>
        {%  endfor %}



    </div>


    <div class="container these_see_div"><a href="#" class="see_these">Смотреть еще</a></div>













{% endblock %}